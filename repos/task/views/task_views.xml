<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='tarea_prueba_action' model='ir.actions.act_window'>
        <field name="name">Tareas</field>
        <field name="res_model">tarea.prueba</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem name="Mi lista de tareas" id="tareas_base_menu" />
    <menuitem name="Tareas" id="tareas_prueba_menu"
              parent="tareas_base_menu" action="tarea_prueba_action"/>

    <record id="tarea_prueba_view_form" model="ir.ui.view">
        <field name="name">Lista de Tareas Form</field>
        <field name="model">tarea.prueba</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="description"/>
                <field name="deadline"/>
                <field name="duration"/>
            </group>
            <group>
                <field name="user_id"/>
            </group>
            <group>
                <field name="state"/>
            </group>
            <header>
                <button name="action_iniciar" string="Iniciar" states="pendiente"/>
                <button name="action_pausar" string="Pausar" states="progreso"/>
                <button name="action_finalizar" string="Finalizar" states="progreso,pausada"/>
            </header>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="state" widget="statusbar" statusbar_visible="pendiente,progreso,pausada,finalizada"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

        <record id="tarea_prueba_view_tree" model="ir.ui.view">
            <field name="name">Vista arbol de tareas</field>
            <field name="model">tarea.prueba</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="deadline"/>
                    <field name="duration"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
    </record>

    <record id="tarea_prueba_view_search" model="ir.ui.view">
        <field name="name">Buscar tareas</field>
        <field name="model">tarea.prueba</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="deadline"/>
                <field name="duration"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="tarea_vista_kanban">
    <field name="name">Tarjeta de tareas</field>
    <field name="model">tarea.prueba</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="name" />
            <field name="description" />
            <field name="duration" />
            <field name="name" />
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_content">
                        <div>
                            <field name="name" />
                        </div>
                        <div>
                            <field name="description" />
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>
</odoo>
